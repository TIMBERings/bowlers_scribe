= simple_form_for @average do |f|
  - if @average.errors.any?
    #error_explanation
      %h2= "#{pluralize(@average.errors.count, "error")} prohibited this average from being saved:"
      %ul
        - @average.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :average
    = f.text_field :average
  .field
    = f.label :season
    = f.text_field :season
  .field
    = f.label :member
    = f.text_field :member
  .actions
    = f.submit 'Save'
