= simple_form_for @game do |f|
  - if @game.errors.any?
    #error_explanation
      %h2= "#{pluralize(@game.errors.count, "error")} prohibited this game from being saved:"
      %ul
        - @game.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :match
    = f.text_field :match
  .field
    = f.label :score
    = f.number_field :score
  .field
    = f.label :performed_date
    = f.date_select :performed_date
  .actions
    = f.submit 'Save'
