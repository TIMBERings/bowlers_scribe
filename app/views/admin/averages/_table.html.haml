.table-responsive
  %table#averages_table.table.table-bordered.table-hover
    %thead
      %tr
        %th Bowler
        %th Season
        %th League
        %th Average
        %th Links

    %tbody
      - @admin_averages.each do |average|

        %tr
          %td average.member.full_name
          %td average.season.year
          %td average.season.league.name
          %td average.average
          %td
            .btn-group
              = link_to 'Show', admin_average_path(average), {class: 'btn btn-success btn-sm'}
              = link_to 'Edit', edit_admin_average_path(average), {class: 'btn btn-info btn-sm'}
              = link_to 'Destroy', admin_average_path(average), {class: 'btn btn-danger btn-sm', :method => :delete, :data => { :confirm => 'Are you sure?' }}
