.table-responsive
  %table#weeks_table.table.table-bordered.table-hover
    %thead
      %tr
        %th Season
        %th Number
        %th Date
        %th Actions
    %tbody
      - @admin_weeks.each do |week|
        %tr
          %td
            = "#{week.season.league.name} #{week.season.year}"
          %td
            = week.number
          %td
            = day_week_month(week.date)
          %td
            .btn-group
              = link_to 'Show', admin_week_path(week), {class: 'btn btn-primary btn-sm'}
              = link_to 'Edit', edit_admin_week_path(week), {class: 'btn btn-info btn-sm'}
              = link_to 'Destroy', '#delete-confirm', {class: 'delete-confirm btn btn-danger btn-sm', 'data-id' => week.id, 'data-name' => "#{week.number} of #{week.season.full_name}" }
= paginate @admin_weeks, :window => 2
= render 'destroy_modal'