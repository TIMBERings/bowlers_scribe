.table-responsive
  %table#leagues_table.table.table-bordered.table-hover
    %thead
      %tr
        %th ID
        %th Name
        %th Manager
        %th Links

    %tbody
      - @admin_leagues.each do |league|
        %tr
          %td= league.id
          %td= league.name
          %td
            = link_to league.manager.full_name, admin_user_path(league.manager)
          %td
            .btn-group
              = link_to 'Show', admin_league_path(league), {class: 'btn btn-primary btn-sm'}
              = link_to 'Edit', edit_admin_league_path(league), {class: 'btn btn-info btn-sm'}
              = link_to 'Destroy', '#delete-confirm', {class: 'delete-confirm btn btn-danger btn-sm', 'data-id' => league.id, 'data-name' => league.name}
= paginate @admin_leagues, :window => 2
= render 'destroy_modal'
