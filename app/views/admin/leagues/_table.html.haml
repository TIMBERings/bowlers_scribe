.table-responsive
  %table#leagues_table.table.table-bordered.table-hover
    %thead
      %tr
        %th ID
        %th Name
        %th Manager
        %th Links

    %tbody
      - @admin_leagues.each do |league|
        %tr
          %td= league.id
          %td= league.name
          %td= league.manager.full_name
          %td
            .btn-group
              = link_to 'Show', admin_league_path(league), {class: 'btn btn-success btn-sm'}
              = link_to 'Edit', edit_admin_league_path(league), {class: 'btn btn-info btn-sm'}
              = link_to 'Destroy', admin_league_path(league), {class: 'btn btn-danger btn-sm', :method => :delete, :data => { :confirm => 'Are you sure?' }}
