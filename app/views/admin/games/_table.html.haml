.table-responsive
  %table#games_table.table.table-bordered.table-hover
    %thead
      %tr
        %th Score
        %th Match
        %th Links

    %tbody
      - @admin_games.each do |game|

        %tr
          %td game.score
          %td game.match_id
          %td
            .btn-group
              = link_to 'Show', admin_game_path(game), {class: 'btn btn-primary btn-sm'}
              = link_to 'Edit', edit_admin_game_path(game), {class: 'btn btn-info btn-sm'}
              = link_to 'Destroy', admin_game_path(game), {class: 'btn btn-danger btn-sm', :method => :delete, :data => { :confirm => 'Are you sure?' }}
