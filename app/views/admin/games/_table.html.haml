.table-responsive
  %table#games_table.table.table-bordered.table-hover
    %thead
      %tr
        %th Match
        %th Bowler
        %th Total
        %th Actions

    %tbody
      - @admin_games.each do |game|

        %tr
          %td= game.match_id
          %td= game.member.full_name
          %td= game.total_score
          %td
            .btn-group
              = link_to 'Show', admin_game_path(game), {class: 'btn btn-primary btn-sm'}
              = link_to 'Edit', edit_admin_game_path(game), {class: 'btn btn-info btn-sm'}
              = link_to 'Destroy', '#delete-confirm', {class: 'delete-confirm btn btn-danger btn-sm', 'data-id' => game.id, 'data-name' => "ID: #{game.id}" }
= paginate @admin_games, :window => 2
= render 'destroy_modal'