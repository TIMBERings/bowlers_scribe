.table-responsive
  %table#users_table.table.table-bordered.table-hover
    %thead
      %tr
        %th Name
        %th USBC Number
        %th Email
        %th Birth Date
        %th

    %tbody
      - @admin_users.each do |user|
        %tr
          %td
            = user.full_name
          %td
            = user.usbc_number
          %td
            = user.email
          %td
            = user.birth_date
          %td
            .btn-group
              = link_to 'Show', admin_user_path(user), {class: 'btn btn-primary btn-sm'}
              = link_to 'Edit', edit_admin_user_path(user), {class: 'btn btn-info btn-sm'}
              = link_to 'Destroy', '#delete-confirm', {class: 'delete-confirm btn btn-danger btn-sm', 'data-id' => user.id, 'data-name' => user.full_name }
= paginate @admin_users, :window => 2
= render 'destroy_modal'
