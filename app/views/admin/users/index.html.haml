%h1 Listing admin_users

%table.table
  %thead
    %tr
      %th ID
      %th First name
      %th Last name
      %th Email
      %th
      %th
      %th

  %tbody
    - @admin_users.each do |admin_user|
      %tr
        %td= admin_user.id
        %td= admin_user.first_name
        %td= admin_user.last_name
        %td= admin_user.email
        %td= link_to 'Show', admin_user_path(admin_user)
        %td= link_to 'Edit', edit_admin_user_path(admin_user)
        %td= link_to 'Destroy', admin_user_path(admin_user), :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New User', new_admin_user_path
